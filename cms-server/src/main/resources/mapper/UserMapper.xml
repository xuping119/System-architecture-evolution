<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.yrlx.cmsserver.mapper.UserMapper">
    <select id="getUser" parameterType="java.lang.String" resultType="com.yrlx.cmsserver.entity.User">
            select * from account where name = #{name}
    </select>
    <select id="getAllUsers"  resultType="com.yrlx.cmsserver.entity.User">
            select * from account
    </select>

    <insert id="addUser" parameterType="com.yrlx.cmsserver.entity.User" >
        insert into account(name,password) values (#{name},#{password})
    </insert>

    <delete id="delUser" parameterType="java.lang.String">
        delete from account where name = #{name}
    </delete>
</mapper>